<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFDF35"
	android:clipChildren="false"
	android:orientation="vertical"
	android:padding="24dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="48dp"
		android:layout_weight="1"
		android:gravity="center">

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="wrap_content"
			android:layout_height="120dp"
			android:adjustViewBounds="true"
			android:src="@drawable/artwork_rating" />
	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFF"
		android:clipToPadding="false"
		android:orientation="vertical"
		android:padding="24dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:src="#F0F" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="[PH] Resto Name"
				android:textColor="?android:textColorPrimary"
				android:textSize="28sp"
				android:textStyle="bold" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center_horizontal"
				android:text="Bagaimana pengalaman makan Anda?"
				android:textColor="?android:textColorPrimary"
				android:textSize="18sp" />

			<RatingBar
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				android:max="5" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="32dp"
					android:gravity="center_vertical">

					<ImageView
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="4dp"
						android:src="@drawable/ic_history_24dp" />

					<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="Kode Booking"
						android:textColor="?android:textColorPrimary"
						android:textSize="16sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="F01234567"
						android:textSize="16sp" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="32dp"
					android:gravity="center_vertical">

					<ImageView
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="4dp"
						android:src="@drawable/ic_history_24dp" />

					<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="Waktu Booking"
						android:textColor="?android:textColorPrimary"
						android:textSize="16sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="15 April 2021, 12.02"
						android:textSize="16sp" />
				</LinearLayout>
			</LinearLayout>

			<Button
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="16dp"
				android:text="Submit" />

		</LinearLayout>
	</LinearLayout>
</LinearLayout>