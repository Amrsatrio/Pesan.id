<?xml version="1.0" encoding="utf-8"?>
<com.amrsatrio.pesanid.ui.RestoListEntry xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?selectableItemBackground"
	android:gravity="center_vertical"
	android:paddingStart="16dp"
	android:paddingTop="12dp"
	android:paddingEnd="16dp"
	android:paddingBottom="12dp">

	<ImageView
		android:id="@+id/thumbnail"
		android:layout_width="108dp"
		android:layout_height="80dp"
		android:src="#F0F" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="12dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="[PH] Resto Name"
			android:textColor="?android:textColorPrimary"
			android:textSize="18sp"
			android:textStyle="bold" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_marginEnd="2dp"
				android:src="@drawable/ic_location_on_24"
				app:tint="#F60000" />

			<TextView
				android:id="@+id/distance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="1.4 km" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingStart="4dp"
				android:paddingEnd="4dp"
				android:text="&#xb7;" />

			<ImageView
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_marginEnd="2dp"
				android:src="@drawable/ic_star_rate_24"
				app:tint="#F7A219" />

			<TextView
				android:id="@+id/rating"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="4.5" />
		</LinearLayout>
	</LinearLayout>
</com.amrsatrio.pesanid.ui.RestoListEntry>